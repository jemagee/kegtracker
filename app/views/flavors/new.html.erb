<% if @flavor.errors.any? %>
  <% @flavor.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

  <%= form_for(@flavor) do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :abbreviation %>
  <%= f.text_field :abbreviation %>

  <%= f.submit %>
<% end %>