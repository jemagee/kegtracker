<h1><%= @ingredient.name %></h1>
<% if @ingredient.archived? %>
	<span id="archived">ARCHIVED</span>
<% end %>

<%= link_to "Edit #{@ingredient.name}", edit_ingredient_path(@ingredient) %>
<%= link_to "Delete #{@ingredient.name}", ingredient_path(@ingredient), method: :delete, data: {confirm: "Are you sure you want to delete this ingredient?"} %>

<% if @ingredient.flavors.any? %>
	<h3 id="component_usage">
		<%= @ingredient.name.capitalize %> is used in the following flavors
	</h3>
	<% @ingredient.flavors.each do |flavor| %>
		<%= div_for(flavor) do %>
			<%= link_to flavor.name, flavor_path(flavor) %>
		<% end %>
	<% end %>
<% end %>
